<style type="text/css" media="screen">
    #toolbar {
        margin: 10px 1em;
    }
    .hidden { display: none; }
</style>

<p id="notice"><%= notice %></p>

<article class="page">

  <header>
    <h1><%= @page.title %></h1>
  </header>

  <div id="toolbar" class="hidden">
      <%= link_to 'Bold', "#", id: "bold" %> | 
      <%= link_to 'Italic', "#", id: "italic" %> |
      <%= link_to 'Link', "#", id: "url" %>
  </div>


  <div id="page-body" class="body" contenteditable="true">
    <%= raw @page.body %>
  </div>

  <footer>
    <%= link_to 'Edit', edit_page_path(@page) %> |
    <%= link_to 'Back', pages_path %>
  </footer>

</article>
